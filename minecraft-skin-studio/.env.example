# Minecraft Skin Studio Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-api-key-here

# API Base URL
# For local development: http://localhost:3001
# For production: https://api.yourcompany.com
VITE_API_URL=http://localhost:3001

# COPPA Compliance Configuration
# Contact legal team for production key
VITE_COPPA_VERIFICATION_KEY=your-verification-key-here

# Feature Flags (optional)
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_PARENT_DASHBOARD=false
VITE_ENABLE_ANALYTICS=false

# Development Settings (optional)
VITE_DEBUG_MODE=false
VITE_MOCK_API=false